<div class=container>
   <h1 class="text-center jost">Lates Articles</h1>
  <div class="row">

  
  <% @articles.each do |article| %>
    <div class="col-sm-4">

<div class="card  my-5" style="width: 20rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.name, article_path(article) ,class:"text-dark text-decoration-none jost"%></h5>
    <%# <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> %>
    <p class="card-text text-lead"><%= article.description %><p>
    <div class="d-flex">
    <%= button_to "Edit", edit_article_path(article), method:"get" ,class:"btn btn-secondary" %>
       
       <%= button_to "Remove", article_path(article), method:"delete" ,class:"btn btn-danger ms-2"%>
    </div>
  </div>
</div>

    </div>
<% end %>

  </div>
</div>
